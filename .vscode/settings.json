{
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "files.autoSave": "onFocusChange",
  "files.associations": {
    "*.js": "javascriptreact"
  },
  "files.exclude": {
    "node_modules": true
  },
  "eslint.validate": ["javascript", "javascriptreact"],
  "eslint.alwaysShowStatus": true
}
